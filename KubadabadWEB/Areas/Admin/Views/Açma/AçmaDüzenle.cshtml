
@{
    ViewData["Title"] = "AçmaDüzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AçmaListesi

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Açma Düzenle</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Kategori Adı</label>
            <input asp-for="AçmaAdı" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Açma Açık Mı?</label>
            <input asp-for="AçmaAçıkMı" />
        </div>
        <div class="row">
            <div class="col-6 col-mid-3">
                <button type="submit" class="btn btn-primary form-control">Güncelle</button>
            </div>
            <div class="col-6 col-mid-3">
                <a asp-controller="Açma" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Listeye Geri Dön
                </a>
            </div>
        </div>


    </div>

</form>