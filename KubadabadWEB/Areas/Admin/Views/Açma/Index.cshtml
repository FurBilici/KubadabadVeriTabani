
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<AçmaListesi>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Açma Listesi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Açma" asp-action="AçmaOluştur" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Açma Oluştur
            </a>
        </div>
    </div>



    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Açma ID</th>
                <th>Açma Adı</th>
                <th>Açma Açık Mı?</th>
                <th>Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.AçmaAdı</td>
                    @if (obj.AçmaAçıkMı == true)
                    {
                        <td>Açık</td>
                    }
                    else
                    {
                        <td>Kapalı</td>
                    }
                    <td>
                        <div class="w-75 btnbtn-group" role="group">
                            <a asp-controller="Açma" asp-action="AçmaDüzenle" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                            <a asp-controller="Açma" asp-action="AçmaSil" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>