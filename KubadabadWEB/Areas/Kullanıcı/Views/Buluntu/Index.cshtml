
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Buluntular>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Buluntu Listesi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Buluntu" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Buluntu Ekle
            </a>
        </div>
    </div>



    <table id="tblBuluntuData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Buluntu ID</th>
                <th>Buluntu Türü</th>
                <th>Buluntu Tarihi</th>
                <th>Buluntu Dönemi</th>
                <th>Buluntu Kotu</th>
                <th>Açma Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        </tbody>

    </table>

</div>

@section Scripts{
    <script src="~/js/Buluntu.js"></script>
}
